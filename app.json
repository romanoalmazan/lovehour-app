{
  "expo": {
    "name": "LoveHour",
    "slug": "lovehour-app",
    "scheme": "lovehour",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./components/images/lovehour-logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./components/images/lovehour-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 36,
            "targetSdkVersion": 36,
            "buildToolsVersion": "36.0.0",
            "gradleVersion": "8.10",
            "minSdkVersion": 23
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "This app needs access to your photo library to select photos for LoveHour."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./components/images/lovehour-logo.png",
          "color": "#D4A574",
          "sounds": []
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.romanoalmazan.lovehour",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to your camera to take photos for LoveHour.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select photos for LoveHour.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": false,
          "NSExceptionDomains": {
            "firebaseapp.com": {
              "NSExceptionAllowsInsecureHTTPLoads": false,
              "NSIncludesSubdomains": true
            },
            "googleapis.com": {
              "NSExceptionAllowsInsecureHTTPLoads": false,
              "NSIncludesSubdomains": true
            }
          }
        },
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./components/images/lovehour-logo.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.romanoalmazan.lovehour",
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "favicon": "./components/images/lovehour-logo.png"
    },
    "extra": {
      "eas": {
        "projectId": "2e9bb7e4-8905-4a69-b4de-2eae549fdfbe"
      }
    }
  }
}
